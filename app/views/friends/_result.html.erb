<% if @search_friend %>
  <div class="row mx-1">
    <div class="card card-header mt-4 result-block col-9">
      <table>
        <tbody>
          <% @search_friend.each do |friend| %>
            <tr class='d-flex flex-row justify-content-between align-items-center mt-2'>
              <td class='mx-2'><strong>Name: </strong> <%= friend.full_name %></td>
              <td class='mx-2'><strong>Email: </strong> <%= friend.email %></td>
              <td class='mx-2'><strong>Actions: </strong> 
                <%= link_to 'View Profile', user_path(friend), class: 'btn btn-sm btn-success' %>
                <% if current_user.not_friend_with?(friend.id) %>
                  <%= button_to 'Follow Friend', friends_path(friend: friend),  method: :post, 
                                class: 'btn btn-sm btn-success', form: {style: 'display:inline-block;'} %>
                <% else %>
                  <span class='badge badge-secondary text-success'>You are friends</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>