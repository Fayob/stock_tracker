<div class="row mt-4">
    <div class="col-9">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">Email</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @friends.each do |friend| %>
            <tr>
              <th scope="row"><%= friend.email %></th>
              <td><%= friend.first_name %></td>
              <td><%= friend.last_name%></td>
              <td>
              <%= link_to 'View Profile', user_path(friend), class: 'btn btn-sm btn-success' %>
              <%= button_to 'Stop following', friend_path(friend), method: :delete, 
                                              class: 'btn btn-sm btn-danger', form: {style: 'display:inline-block;'} %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>