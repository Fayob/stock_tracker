<h2>Friends</h2>

<div class='search-area'>
  <h3>Search Friends</h3>

  <%= form_tag search_friend_path, method: :get, remote: true do %>
    <div class='form-group row'>
      <div class='col-sm-9'>
        <%= text_field_tag :friend, params[:friend], placeholder: "Search friend by email or name", autofocus: true, class: 'form-control form-control-lg' %>
      </div>
      <div class='col-sm-3'>
        <%= button_tag type: :submit, class: 'btn btn-success' do %>
          <%= fa_icon 'search 2x' %>
        <% end %>
      </div>
    </div> 
  <% end %>
</div>

<% unless @friends.empty? %>
  <%= render 'friends/list' %>
<% end %>
